<Window x:Class="Bmi_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bmi_Calculator"
        mc:Ignorable="d"
        Title="Bmi Calculator" Height="450" Width="400">
    <Grid Margin="-9,0,9,0">
        <Label Content="Testtömegindex" 
               HorizontalAlignment="Left" 
               Margin="130,24,0,0" 
               VerticalAlignment="Top" 
               Width="160" 
               FontSize="20px" 
               Padding="2px" 
               Foreground="Coral" 
               FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="45,145,0,0" 
                   TextWrapping="Wrap" 
                   Text="Testsúly(kg):" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="139" 
                   FontSize="20px" 
                   RenderTransformOrigin="0.36,5.119"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="45,95,0,0" 
                   TextWrapping="Wrap" 
                   Text="Magasság(cm):" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="139" 
                   FontSize="20px"/>
        <Button x:Name="btn_szamol" 
                Content="Számol" 
                HorizontalAlignment="Left" 
                Margin="165,194,0,0" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="95" 
                FontSize="20px" 
                FontWeight="Bold"
                Foreground="Green"
                Background="Gray" Click="btn_szamol_Click"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="41,260,0,0" 
                   TextWrapping="Wrap" 
                   Text="Az Ön testtömegindexe:" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="219" 
                   FontSize="20px" 
                   RenderTransformOrigin="0.432,4.236"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="15,305,0,0" 
                   TextWrapping="Wrap" 
                   Text="Az ön eredménye:" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="168" 
                   FontSize="20px" 
                   RenderTransformOrigin="0.432,4.236">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.368"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button x:Name="btn_ujszamol" 
                Content="Új számolás" 
                HorizontalAlignment="Left" 
                Margin="145,349,0,0" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="125" 
                FontSize="20px" 
                FontWeight="Bold" 
                RenderTransformOrigin="0.316,4.251"
                Foreground="DarkRed"
                Background="Gray" Click="btn_ujszamol_Click"/>
        <TextBlock x:Name="tb_testomegindex" 
                   HorizontalAlignment="Left" 
                   Margin="269,259,0,0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="89" 
                   FontSize="20px" 
                   RenderTransformOrigin="0.432,4.236" 
                   Background="{DynamicResource {x:Static 
                SystemColors.ActiveBorderBrushKey}}"/>
        <TextBlock x:Name="tb_eredmeny" 
                   HorizontalAlignment="Left" 
                   Margin="184,309,0,0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="25" 
                   Width="205" 
                   FontSize="15px" 
                   RenderTransformOrigin="0.432,4.236" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <TextBox x:Name="tbx_magassag" 
                 HorizontalAlignment="Left" 
                 Margin="195,94,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="75" Height="35" 
                 FontSize="25px" 
                 RenderTransformOrigin="0.133,0.715"/>
        <TextBox x:Name="tbx_testsuly" 
                 HorizontalAlignment="Left" 
                 Margin="165,144,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="75" 
                 Height="35" 
                 FontSize="25px"/>

    </Grid>
</Window>
