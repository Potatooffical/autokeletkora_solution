<Window x:Class="Bmi_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bmi_Calculator"
        mc:Ignorable="d"
        Title="Bmi Calculator" Height="450" Width="400">
    <Grid Margin="-9,0,9,0">
        <Label Content="Testtömegindex" 
               HorizontalAlignment="Left" 
               Margin="130,24,0,0" 
               VerticalAlignment="Top" 
               Width="160" 
               FontSize="20px" 
               Padding="2px" 
               Foreground="Coral" 
               FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="45,145,0,0" 
                   TextWrapping="Wrap" 
                   Text="Testsúly(kg):" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="139" 
                   FontSize="20px" 
                   RenderTransformOrigin="0.36,5.119"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="45,95,0,0" 
                   TextWrapping="Wrap" 
                   Text="Magasság(cm):" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="139" 
                   FontSize="20px"/>
        <Button x:Name="btn_szamol" 
                Content="Számol" 
                HorizontalAlignment="Left" 
                Margin="165,194,0,0" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="95" 
                FontSize="20px" 
                FontWeight="Bold"
                Foreground="Green"
                Background="Gray"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="41,260,0,0" 
                   TextWrapping="Wrap" 
                   Text="Az Ön testtömegindexe:" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="219" 
                   FontSize="20px" 
                   RenderTransformOrigin="0.432,4.236"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="41,310,0,0" 
                   TextWrapping="Wrap" 
                   Text="Az ön eredménye:" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="219" 
                   FontSize="20px" 
                   RenderTransformOrigin="0.432,4.236"/>
        <Button x:Name="btn_ujszamol" 
                Content="Új számolás" 
                HorizontalAlignment="Left" 
                Margin="145,349,0,0" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="125" 
                FontSize="20px" 
                FontWeight="Bold" 
                RenderTransformOrigin="0.316,4.251"
                Foreground="DarkOrange"
                Background="Gray"/>
        <TextBlock x:Name="tb_testomegindex" 
                   HorizontalAlignment="Left" 
                   Margin="269,259,0,0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="89" 
                   FontSize="20px" 
                   RenderTransformOrigin="0.432,4.236"/>
        <TextBlock x:Name="tb_eredmeny" 
                   HorizontalAlignment="Left" 
                   Margin="210,309,0,0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="34" 
                   Width="89" 
                   FontSize="20px" 
                   RenderTransformOrigin="0.432,4.236"/>
        <TextBox x:Name="magassag" 
                 HorizontalAlignment="Left" 
                 Margin="195,94,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="75" Height="35" 
                 FontSize="15px" 
                 RenderTransformOrigin="0.133,0.715"/>
        <TextBox x:Name="testsuly" 
                 HorizontalAlignment="Left" 
                 Margin="165,144,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="75" 
                 Height="35" 
                 FontSize="15px"/>

    </Grid>
</Window>
